<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nuwan.nbqsafirstround.DebuggingActivity"
    android:background="@color/background_color">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View User"
        android:id="@+id/view_user_button"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:onClick="viewUser"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prediction"
        android:id="@+id/prediction_button"
        android:layout_below="@+id/view_user_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:onClick="predict"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Bill"
        android:id="@+id/view_bill_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="viewBill"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Bill Details"
        android:id="@+id/view_bill_item_button"
        android:layout_below="@+id/view_bill_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="62dp"
        android:onClick="viewBillItemTwo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Bill Informations"
        android:id="@+id/delete_button"
        android:layout_below="@+id/view_bill_item_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:onClick="deleteBill"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate this month report"
        android:id="@+id/report_button"
        android:layout_below="@+id/delete_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:onClick="generateMonthReport"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNWANTED EXP"
        android:id="@+id/btn_unwanted_exp_button"
        android:layout_below="@+id/report_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:onClick="viewUnwantedExpensesQuestions"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test UE DB"
        android:id="@+id/btnTestUE"
        android:layout_below="@+id/btn_unwanted_exp_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:onClick="testUEDB"/>




</RelativeLayout>
