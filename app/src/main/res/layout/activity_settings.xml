<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:floatlabel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.nuwan.nbqsafirstround.SettingsActivity"
    android:background="@color/background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_colors"
        android:text="Settings"
        android:textStyle="bold"
        android:textSize="34sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvTitle"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="@color/text_colors"
        android:layout_marginBottom="8dp"
        style="?android:attr/listSeparatorTextViewStyle" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddressEditTextView"
        android:hint="Email Address"
        android:inputType="text"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="25sp"
        app:met_baseColor="@color/text_colors"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Income"
        android:textColor="@color/text_colors"
        android:layout_marginBottom="8dp"
        style="?android:attr/listSeparatorTextViewStyle" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incomeEditTextView"
        android:hint="Income"
        android:inputType="text"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="25sp"
        app:met_baseColor="@color/text_colors"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnUpdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/text_colors"
        android:text="Update"
        android:onClick="update"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnCancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/text_colors"
        android:text="Cancel"
        android:onClick="cancel"/>

</LinearLayout>
