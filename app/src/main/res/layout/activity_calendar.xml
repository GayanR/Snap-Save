<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nuwan.nbqsafirstround.CalendarActivity"
    android:background="@color/background_color">

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTextSize="15sp"
        app:compactCalendarBackgroundColor="@color/text_colors"
        app:compactCalendarTextColor="#ffffff"
        app:compactCalendarFirstDayOfMonthBackgroundColor="@color/text_colors"
        app:compactCalendarCurrentDayBackgroundColor="@color/ui_cyan"
        />





    <ListView
        android:id="@+id/bookings_listview"
        android:layout_below="@+id/compactcalendar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </ListView>

</RelativeLayout>
